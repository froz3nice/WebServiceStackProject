@model MvcEmptyWebApp1.Models.PaymentDetails

@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Update</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(a => a.Id)
            <div class="form-group">
                
                <div class="col-md-10">
                    Name <br />
                    @Html.TextBoxFor(a => a.Name, new { @Value = Model.Name })
                </div>
            </div>

            <div class="form-group">
                
                <div class="col-md-10">
                    Surname <br />
                    @Html.TextBoxFor(a => a.Surname, new { @Value = Model.Surname })
                </div>
            </div>

            <div class="form-group">
                
                <div class="col-md-10">
                    Age <br />
                    @Html.TextBoxFor(a => a.Age,new {@value = Model.Age })
                    <br />
                    <br />
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
            
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
